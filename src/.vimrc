filetype plugin indent on

syntax on

set nomodeline
set background=dark
set backspace=2
set expandtab
set hlsearch
set shiftwidth=4
set tabstop=4
set wrap!

set updatetime=250
set signcolumn=yes
highlight GitGutterAdd    ctermfg=2
highlight GitGutterChange ctermfg=3
highlight GitGutterDelete ctermfg=1

set number
set colorcolumn=81
highlight ColorColumn ctermbg=8

set directory=~/.vim/swapfiles//
